<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Профиль"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/string1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="АО 'Мосэнергосбыт'"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sting2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Лицевой счёт: №12345-67-89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/string1" />

    <TextView
        android:id="@+id/sting5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="Счётчик №12345678 - Электроснабжение"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sting2" />
    <TextView
        android:id="@+id/string3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text="Текущие показания, кВт/ч*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sting5" />

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="378dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/string3" />

    <TextView
        android:id="@+id/string4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тарифная зона"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext1" />

    <TextView
        android:id="@+id/sting6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="Однотарифный учёт"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/string4" />

    <TextView
        android:id="@+id/string7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Последние переданные показания 01.01.2022"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sting6" />

    <TextView
        android:id="@+id/sting8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 000,0"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/string7" />

    <Button
        android:id="@+id/Pokazania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Передать показания"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sting8" />

    <TextView
        android:id="@+id/string9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш тарифный план"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pokazania" />

    <TextView
        android:id="@+id/string10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4,0 рубля за кВт/ч"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/string9"
        app:layout_constraintStart_toEndOf="@+id/string9"
        app:layout_constraintTop_toTopOf="@+id/string9" />

    <TextView
        android:id="@+id/string11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="К оплате"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/string9" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/string11"
        app:layout_constraintStart_toEndOf="@+id/string11"
        app:layout_constraintTop_toTopOf="@+id/string11" />
</androidx.constraintlayout.widget.ConstraintLayout>